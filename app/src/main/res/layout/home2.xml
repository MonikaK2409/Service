<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home2Activity">

    <TextView
        android:id="@+id/texty"
        android:layout_width="258dp"
        android:layout_height="54dp"
        android:text="YOUR HOME!"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/loggout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <GridLayout
        android:layout_width="318dp"
        android:layout_height="227dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/mkp"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="provMakeup"
            android:text="Make Up" />

        <Button
            android:id="@+id/pbp"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="provPlumber"
            android:text="plumber" />

        <Button
            android:id="@+id/elp"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="provElec"
            android:text="Electrician" />

        <Button
            android:id="@+id/carp"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="provCarp"
            android:text="Carpenter" />

        <Button
            android:id="@+id/housek"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="provHouse"
            android:text="Housekeeping" />
        <Button
            android:id="@+id/barber"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="provBarber"
            android:text="Barber" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>